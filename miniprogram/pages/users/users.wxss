.userinfo {  
  position: relative;  
  width: 750rpx;  
  height: 320rpx;  
  color: rgb(0, 0, 0);  
  display: flex;  
  flex-direction: column;  
  align-items: center; 
  font-size: 14px;  
}  
  
.userinfo-avatar {  
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  

.orderCart {
  width: 100%;
  line-height: 52px;
  font-size: 30rpx;
  color: #007aff;
}
  
.shop {
  width: 100%;
  line-height: 52px;
  font-size: 30rpx;
  color: #5bacd1;
}